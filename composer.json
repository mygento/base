{
    "name": "mygento/base",
    "type": "magento-module",
    "license": "proprietary",
    "homepage": "https://bitbucket.org/mygento/base",
    "description": "Mygento base",
    "require": {
        "magento-hackathon/magento-composer-installer": "*"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "2.*",
        "magento-ecg/coding-standard": "dev-master",
	"sebastian/phpdcd": "*",
	"sebastian/phpcpd": "*",
        "jakub-onderka/php-parallel-lint": "0.*",
        "jakub-onderka/php-console-highlighter": "0.*",
	"phpmd/phpmd" : "@stable"
    },
    "repositories": [
        {
            "type": "vcs",
            "url": "git@bitbucket.org:mygento/base.git"
        }
    ],
    "extra": {
        "magento-root-dir": "."
    }
}
